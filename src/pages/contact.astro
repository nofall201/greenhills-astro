---
import Layout from "../layouts/Layout.astro";
import MapView from "../components/MapView.astro";
---

<Layout>
  <section class="max-w-4xl mx-auto px-6 py-16 text-center">
    <h2 class="text-2xl font-bold text-indigo-700 mb-4">Hubungi Kami</h2>
    <form class="max-w-md mx-auto space-y-4 mb-12">
      <input type="text" placeholder="Nama" class="w-full p-3 rounded text-gray-900" />
      <input type="tel" placeholder="Nomor WhatsApp" class="w-full p-3 rounded text-gray-900" />
      <textarea placeholder="Pesan Anda" class="w-full p-3 rounded text-gray-900 h-24"></textarea>
      <button type="submit" class="w-full bg-indigo-600 text-white py-3 rounded-lg hover:bg-indigo-700 transition">
        Kirim Pesan
      </button>
    </form>
    <MapView height={300} zoom={15} />
  </section>
</Layout>
