---
import logo from "../assets/Logo_GreenHills_Horizontal.png";
---

<section id="unit" class="bg-gray-50 py-20" x-data="{ open: null }">
  <div class="max-w-6xl mx-auto px-6">
    <h2 class="text-3xl font-bold text-emerald-700 mb-8 text-center">Pilihan Unit</h2>
    <div class="grid md:grid-cols-2 gap-8">
      <!-- Unit A -->
      <div class="border rounded-xl p-4 bg-white shadow-sm hover:shadow-lg transition cursor-pointer" @click="open === 'A' ? open = null : open = 'A'">
        <img src={logo.src} alt="Unit A" class="rounded-lg mb-4" />
        <h3 class="text-lg font-semibold text-gray-900">Villa Type A</h3>
        <p class="text-gray-600 text-sm">2 lantai, 3 kamar tidur</p>
        <div x-show="open === 'A'" x-transition class="mt-4 text-sm text-gray-700 bg-gray-50 rounded-lg p-4">
          <ul class="list-disc pl-5">
            <li>Luas bangunan: 120 m²</li>
            <li>3 kamar tidur, 2 kamar mandi</li>
            <li>Harga mulai 950 juta</li>
          </ul>
        </div>
      </div>

      <!-- Unit B -->
      <div class="border rounded-xl p-4 bg-white shadow-sm hover:shadow-lg transition cursor-pointer" @click="open === 'B' ? open = null : open = 'B'">
        <img src={logo.src} alt="Unit B" class="rounded-lg mb-4" />
        <h3 class="text-lg font-semibold text-gray-900">Villa Type B</h3>
        <p class="text-gray-600 text-sm">1 lantai, taman pribadi</p>
        <div x-show="open === 'B'" x-transition class="mt-4 text-sm text-gray-700 bg-gray-50 rounded-lg p-4">
          <ul class="list-disc pl-5">
            <li>Luas bangunan: 90 m²</li>
            <li>2 kamar tidur, 1 kamar mandi</li>
            <li>Harga mulai 750 juta</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
